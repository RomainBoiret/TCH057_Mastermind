<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_accueil"
    tools:context="com.Martin_Romain_Felix.mastermind.activites.HistoriqueActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/history_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/historique"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <ListView
        android:id="@+id/lvHistorique"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/history_title"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnRetour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Retour"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:backgroundTint="#4CAF50"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginHorizontal="10dp"/>

        <Button
            android:id="@+id/btnEffacerHistorique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Effacer"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:backgroundTint="#F44336"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>

</LinearLayout>
